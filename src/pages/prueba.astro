<main>
  <section class="h-screen w-full bg-slate-950"></section>
  <div class="trigger h-screen flex bg-slate-400 relative overflow-hidden">
    <div
      class="grid leading-3 w-full place-items-center h-screen bg-black text-white flex-shrink-0"
    >
