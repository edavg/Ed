    <div
      class="grid w-full place-items-center h-screen bg-gray-600 text-black flex-shrink-0"
    >
      <span>Hola</span>
    </div>
  </div>
  <section class="h-screen w-full bg-slate-950"></section>
</main>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/all";

  const slider = document.querySelector(".trigger") as HTMLDivElement;
  const sections = gsap.utils.toArray(".trigger div");

  gsap.registerPlugin(ScrollTrigger);

  gsap.to(sections, {
    xPercent: -100 * (sections.length - 1),
    ease: "none",
    scrollTrigger: {
      trigger: slider,
      pin: true,
      scrub: 1,
      end: "+=3000",
    },
  });
</script>
