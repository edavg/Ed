<hr class="max-w-6xl mx-auto mb-6" />
<footer id="contacto" class="max-w-6xl mx-auto pb-12">
  <section
    class="mx-auto pb-12 grid grid-cols-2 border-[1px] border-yellow-50 py-12"
  >
    <form method="POST" action="https://formsubmit.co/eduardo.avg95@gmail.com">
      <h4 class="text-yellow-50 text-center text-4xl font-bold mb-6">
        ¡Conversemos!
      </h4>
      <div
        class="w-4/5 mx-auto flex flex-col max-w-md"
        style={`view-transition-name: form`}
      >
        <label class="mb-2">Nombre:</label>
        <input
          type="text"
          name="name"
          class="mb-4 py-2 px-4 bg-transparent border-2 border-slate-200 outline-0 focus:border-yellow-100 focus:border-4 transition-colors"
          required
        />
        <label class="mb-2">Email:</label>
        <input
          type="email"
          name="email"
          class="mb-4 py-2 px-4 bg-transparent border-2 border-slate-200 outline-0 focus:border-yellow-100 focus:border-4 transition-colors"
          required
        />
        <label class="mb-2">Teléfono:</label>
        <input
          type="tel"
          name="number"
          class="mb-4 py-2 px-4 bg-transparent border-2 border-slate-200 outline-0 focus:border-yellow-100 focus:border-4 transition-colors"
          required
        />
        <label class="mb-2">Mensaje</label>
        <textarea
          name="text"
          class="mb-6 py-2 px-4 bg-transparent border-2 caret-yellow-100 border-slate-200 outline-0 focus:border-yellow-100 focus:border-4 transition-colors"
          required></textarea>
        <button
          type="submit"
          class="bg-slate-600 hover:bg-yellow-100 hover:text-slate-600 rounded-sm border-[1px] border-slate-500 hover:border-yellow-100 transition-colors"
          >Enviar</button
        >
      </div>
      <input
        type="hidden"
        name="_next"
        value="https://edavg-portfolio-tau.vercel.app/"
      />
      <input type="hidden" name="_captcha" value="false" />
    </form>
  </section>
</footer>
